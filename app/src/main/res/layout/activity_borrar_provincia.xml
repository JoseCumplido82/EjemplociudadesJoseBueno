<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BorrarProvinciaActivity">

    <TextView
        android:id="@+id/titulo_borrarp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Borrar Provincia"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sp_provincias"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="@+id/titulo_borrarp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/titulo_borrarp"
        app:layout_constraintTop_toBottomOf="@+id/titulo_borrarp" />

    <Button
        android:id="@+id/bt_borrar_provincia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="BorrarProvincia"
        android:onClick="borrarLaProvincia"
        app:layout_constraintEnd_toEndOf="@+id/sp_provincias"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/sp_provincias"
        app:layout_constraintTop_toBottomOf="@+id/sp_provincias" />
</androidx.constraintlayout.widget.ConstraintLayout>