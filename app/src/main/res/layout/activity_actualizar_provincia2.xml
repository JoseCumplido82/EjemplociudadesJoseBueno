<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarProvinciaActivity2">

    <TextView
        android:id="@+id/txt_actualizarP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/actualizar_provincia2"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_actualizarp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/id_provincia"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txt_actualizarP2"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/txt_actualizarP2"
        app:layout_constraintTop_toBottomOf="@+id/txt_actualizarP2"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edt_actualizarp_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/nombre_de_la_provincia"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_actualizarp_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_actualizarp_id"
        app:layout_constraintTop_toBottomOf="@+id/edt_actualizarp_id" />

    <Button
        android:id="@+id/bt_actualizarDatosP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/actualizar_datos"
        android:onClick="actualizarDatosProvincia"
        app:layout_constraintEnd_toEndOf="@+id/edt_actualizarp_nombre"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/edt_actualizarp_nombre"
        app:layout_constraintTop_toBottomOf="@+id/edt_actualizarp_nombre" />
</androidx.constraintlayout.widget.ConstraintLayout>